<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homecardview"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    app:cardCornerRadius="30dp"
    android:layout_marginStart="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemimageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_illustration" />

        <TextView
            android:id="@+id/itemtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boldpoppins"
            android:text="voice assistant will help you to learn new words in English"
            android:textColor="@color/darktext"
            android:textAlignment="center"
            android:textSize="17sp" />
        <Button
            android:id="@+id/itembtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/mediumpoppins"
            android:background="@drawable/btnbg"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
