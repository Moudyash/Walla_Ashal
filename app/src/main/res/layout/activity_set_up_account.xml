<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Ui.SetUpAccountActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Choose Your Photo"
        android:textColor="@color/text"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/selectPhoto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"

            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_margin="3dp"
            android:src="@drawable/ic_empty"
            android:translationZ="5dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/rounded_btn"

            />

        <ImageButton
            android:id="@+id/edit_profile_image"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/rounded_btn"
            android:src="@drawable/ic_pen"
            android:translationZ="6dp"

            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal">

        <View
            android:layout_width="135dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="           OR            "
            android:textColor="#BABABA"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="135dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@color/grey" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="Pickup Your Avatar"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_girl"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginEnd="40dp"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#AD75E4"
            >

                <ImageView
                    android:layout_marginTop="9dp"
                    android:id="@+id/girl"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/girl" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_boy"

            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#CF785E"
                >

                <ImageView
                    android:layout_marginTop="9dp"
                    android:id="@+id/boy"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/boy" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernamelay"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
app:errorTextColor="@color/errorRed"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:hint="Enter Your Name"
        app:endIconMode="clear_text"
        app:hintTextColor="#3F414E"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8CBFF"
            android:fontFamily="@font/light"
            android:textStyle="bold"
            android:maxLength="30"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/getbtn"
        android:fontFamily="@font/medium"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>